<h1>Books#edit</h1>
<%if @book.errors.any?%>
    <%=@book.errors.count%> errors
    <ul>
        <%@book.errors.full_messages.each do |msg|%>
            <li><%=msg%></li>
        <%end%>
    </ul>
<%end%>
<%=form_with model: @book do |f|%>
    <%=f.text_field:title%>
    <%=f.text_area:body%>
    <%=f.submit'Update Book'%>
<%end%>

<%=link_to"Show", book_path(@book.id)%>
|
<%=link_to"Back", books_path%>

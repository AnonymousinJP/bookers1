<h1>Books#index</h1>
<table>
    <thead>
        <tr>
            <th>Title</th><th>Body</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book|%>
            <tr>
            <td><%=book.title%></td>
            <td><%=book.body%></td>
            <td><%=link_to"Show", book_path(book.id)%></td>
            <td><%=link_to"Edit", edit_book_path(book.id)%></td>
            <td><%=link_to"Destroy", book_path(book), method: :delete, "data-confirm"=>"Are you sure?"%></td>
            </tr>
        <%end%>
    </tbody>
</table>

<%=form_with model: @book, url:'/books', method: :post do |f|%>
    New book<br>
    <%if @book.errors.any?%>
        <%=@book.errors.count%> errors
        <ul>
            <%@book.errors.full_messages.each do |msg|%>
                <li><%=msg%></li>
            <%end%>
        </ul>
    <%end%>
    <h3>Title</h3>
    <%=f.text_field:title%>
    <h3>Body</h3>
    <%=f.text_area:body%>
    <%=f.submit'Create Book'%>
<%end%>
